<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/lead_number"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvLeadNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="00003"
                android:textColor="@color/white" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            app:cardElevation="2dp"
            app:cardMaxElevation="2dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
               android:id="@+id/llLeadDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    android:id="@+id/tvLeadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:text="Virendra Sehwag"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivLocation"
                            android:layout_width="25sp"
                            android:layout_gravity="center"
                            android:layout_height="25sp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginStart="@dimen/margin_20"
                            android:textColor="@color/black"
                            android:text="ajkbnvjadbhvkhbvljabvlbavlbl"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ivCall"
                            android:layout_width="30sp"
                            android:layout_weight="1"
                            android:layout_gravity="end|center"
                            android:layout_height="30sp"
                            android:tint="@color/md_green_500"
                            android:src="@drawable/call_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/fields_margin"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivPhone"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:src="@drawable/call_icon" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20"
                            android:gravity="start"
                            android:text="8978946521"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ivCallUpdate"
                            android:layout_width="30sp"
                            android:layout_weight="1"
                            android:layout_gravity="end|center"
                            android:layout_height="30sp"
                            android:tint="@color/md_red_500"
                            android:src="@drawable/ic_edit" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fields_margin"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:src="@drawable/ic_email_black_24dp" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:text="aljbvak@gmial.com"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fields_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_of_loan"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvTypeOfLoan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:textColor="@color/black"
                            android:text="Home Loan"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_20"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lead Status : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tvLeadStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gradient_black"
                            android:layout_marginStart="5sp"
                            android:text="Pending"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:visibility="gone"
                    style="?android:attr/buttonBarStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnUpdateApplication"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_weight="1"
                        android:background="@drawable/button_theme_style"
                        android:padding="5sp"
                        android:textColor="@color/white"
                        android:text="@string/application"
                        android:textSize="@dimen/button_text_size"
                        />

                    <Button
                        android:id="@+id/btnCallToCustomer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:autoLink="phone"
                        android:background="@drawable/button_theme_style"
                        android:backgroundTint="@color/md_red_600"
                        android:padding="5sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:text="@string/call"
                        android:textSize="@dimen/button_text_size" />

                    <Button
                        android:id="@+id/btnCallUpdates"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:textSize="@dimen/button_text_size"
                        style="?android:attr/buttonBarButtonStyle"
                        android:padding="5sp"
                        android:background="@drawable/button_theme_style"
                        android:backgroundTint="@color/md_grey_800"
                        android:layout_weight="1"
                        android:text="@string/call_update" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvActivities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activities"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:id="@+id/btnAddTask"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_text_size" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10" />

                <TextView
                    android:id="@+id/tvNoActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:text="@string/you_have_no_pending_activities"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</layout>
