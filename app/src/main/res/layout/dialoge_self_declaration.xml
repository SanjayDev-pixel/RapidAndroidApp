<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/dmi_logo"/>

            <TextView
                android:id="@+id/textHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KYC Self Declaration"
                android:gravity="center"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/margin5dp"
                android:paddingBottom="@dimen/margin5dp"
                android:layout_below="@+id/logo"/>


               <CheckBox
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/textHeading"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:text="I confirm that the customer KYC document is personally verified by me in customer presence"
                   android:id="@+id/checkboxConfirmation">

               </CheckBox>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin20dp"
                android:layout_below="@+id/checkboxConfirmation">
                <Button
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:textColor="@color/white"
                    android:background="@color/grey_585858"
                    android:text="Close"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/buttonOk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:text="Proceed"
                    android:layout_weight="1"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</layout>