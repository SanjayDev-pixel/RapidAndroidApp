<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/heading_background"
                    android:text="@string/loan_information"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerLoanProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/text_min_width"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:theme="@style/MatchSpinnerTheme"
                    android:textSize="@dimen/button_text_size"
                    app:ms_arrowColor="@color/black"
                    app:ms_arrowSize="16dp"
                    app:ms_floatingLabelColor="@color/hint_color"
                    app:ms_floatingLabelText="Loan Product*"
                    app:ms_hint="Loan Product*"
                    app:ms_hintColor="@color/hint_color"
                    app:ms_hintTextSize="@dimen/hint_size"
                    app:ms_multiline="false" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerLoanPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MatchSpinnerTheme"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:minWidth="@dimen/text_min_width"
                    android:textSize="@dimen/text_size"
                    app:ms_arrowColor="@color/black"
                    app:ms_arrowSize="16dp"
                    app:ms_floatingLabelColor="@color/hint_color"
                    app:ms_floatingLabelText="Loan Purpose*"
                    app:ms_hint="Loan Purpose*"
                    app:ms_hintColor="@color/hint_color"
                    app:ms_hintTextSize="@dimen/hint_size"
                    app:ms_multiline="false" />

                <com.finance.app.view.customViews.CustomSpinnerView
                    android:id="@+id/spinnerLoanScheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_amount_request"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/hint_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmountRequest"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            style="@style/spinner_style"
                            android:singleLine="true"
                            android:maxLength="9"
                            android:layout_height="wrap_content"
                            android:hint="@string/loan_amount_request"
                            android:minWidth="200dp"
                            android:textSize="@dimen/text_size" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_tenure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/hint_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTenure"
                            android:layout_width="match_parent"
                            android:focusableInTouchMode="true"
                            style="@style/spinner_style"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:singleLine="true"
                            android:maxLength="3"
                            android:hint="@string/tenure_months"
                            android:minWidth="150dp"
                            android:textSize="@dimen/text_size" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_interest_type"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_emi"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/hint_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmi"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/affordable_emi"
                        android:inputType="number"
                        android:maxLength="6"
                        android:minWidth="@dimen/text_min_width"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerSourcingChannelPartner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:minWidth="@dimen/text_min_width"
                    android:theme="@style/MatchSpinnerTheme"
                    app:ms_arrowColor="@color/black"
                    android:textSize="@dimen/text_size"
                    app:ms_arrowSize="16dp"
                    app:ms_floatingLabelColor="@color/hint_color"
                    app:ms_floatingLabelText="Sourcing Channel Partner*"
                    app:ms_hint="Sourcing Channel Partner*"
                    app:ms_hintColor="@color/hint_color"
                    app:ms_hintTextSize="@dimen/hint_size"
                    app:ms_multiline="false" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerPartnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MatchSpinnerTheme"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:minWidth="@dimen/text_min_width"
                    android:visibility="gone"
                    app:ms_arrowColor="@color/black"
                    app:ms_arrowSize="16dp"
                    app:ms_floatingLabelColor="@color/hint_color"
                    app:ms_floatingLabelText="Channel Partner Name  "
                    android:textSize="@dimen/text_size"
                    app:ms_hint="Channel Partner Name  "
                    android:focusable="false"
                    app:ms_hintColor="@color/hint_color"
                    app:ms_hintTextSize="@dimen/hint_size"
                    app:ms_multiline="false" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbPropertySelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:padding="@dimen/margin_10"
                    android:text="@string/property_selected"
                    android:textSize="@dimen/button_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:baselineAligned="true"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivUploadForm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:src="@drawable/upload_icon" />

                    <ImageView
                        android:id="@+id/ivThumbnail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50sp"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/ivPdf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_pdf_type"
                        android:layout_height="50sp"
                        android:layout_gravity="center" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:layout_gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/black"
                    android:textSize="@dimen/button_text_size" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>
