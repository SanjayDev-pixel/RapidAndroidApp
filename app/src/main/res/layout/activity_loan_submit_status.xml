<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_200"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfileBg"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/lllead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lead_id"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lead_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin5dp"
                    android:text="6767767766"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/logo_layout"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_below="@+id/lllead"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_loan"
                    android:tint="@color/md_green_300" />

                <TextView
                    android:id="@+id/preapproved_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:gravity="center"
                    android:text="@string/preapproved"
                    android:textColor="@color/md_green_300"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logo_layout_reject"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_below="@+id/lllead"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:background="@color/white"

                    android:src="@drawable/ic_letterx" />

                <TextView
                    android:id="@+id/preapproved_text_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10dp"
                    android:text="@string/reject"
                    android:textColor="@color/md_red_500"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logo_layout_deviation"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_below="@+id/lllead"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_loan"
                    android:tint="@color/md_orange_300" />

                <TextView
                    android:id="@+id/preapproved_text_deviation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10dp"
                    android:text="@string/deviation"
                    android:textColor="@color/md_orange_300"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/eligibility_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin10dp"
                android:gravity="center"
                android:text="@string/eligibity_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eligibleAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eligibility_text"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin5dp"
                android:paddingLeft="@dimen/margin10dp"
                android:text="Rs: 31231312321"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/llstatus"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/_140sdp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/margin10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="@string/tenure"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/tenure_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="5 years"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="@string/interest_rate"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="8.0%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="@string/emi"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/emi_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="10000/M"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="@string/current_status"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin5dp"
                            android:text="Aligned to credit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_100" />

                <Button
                    android:id="@+id/bttn_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin20dp"
                    android:background="@drawable/button_theme_style"
                    android:gravity="center"
                    android:text="Go to Dashboard"
                    android:textColor="@color/white" />


            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/lead_status_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/md_grey_200"
            android:gravity="left|center"
            android:paddingLeft="@dimen/margin10dp"
            android:text="Approved"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin20dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp" />


    </LinearLayout>

</layout>
