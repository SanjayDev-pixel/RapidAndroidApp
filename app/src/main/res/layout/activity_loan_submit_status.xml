<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ScrollView
        tools:context = ".view.activity.LoanSubmitStatusActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_grey_200">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivProfileBg"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:src="@color/colorPrimary" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/margin_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lead_id"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/leadid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="878787877"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/margin5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_leadstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/margin_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rulebased_status"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/lead_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Approved"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/margin5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/llstatus"
                    android:text="@string/eligibity_text"
                    android:layout_below="@+id/ll_leadstatus"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:background="@color/white"/>

                <LinearLayout
                    android:id="@+id/llstatus"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/margin10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tenure"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"/>
                            <TextView
                                android:id="@+id/tenure_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 years"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/interest_rate"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.0%"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_grey_100"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/emi"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"/>
                            <TextView
                                android:id="@+id/emi_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10000/M"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/current_status"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aligned to credit"
                                android:layout_margin="@dimen/margin5dp"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_grey_100"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Go to Dashboard"
                        android:background="@drawable/button_theme_style"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin20dp"
                        android:gravity="center"
                        android:textColor="@color/white"/>


                </LinearLayout>








            </RelativeLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/md_grey_200"
        android:text="Technical"
        android:gravity="left|center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingLeft="@dimen/margin10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:text="Property/Residence"
        android:gravity="left|center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/margin10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/margin10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approval_auth"
                android:layout_margin="@dimen/margin5dp"
                android:textSize="@dimen/text_size"/>
            <TextView
                android:id="@+id/approval_authority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEO"
                android:layout_margin="@dimen/margin5dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mitigating_factor"
                android:layout_margin="@dimen/margin5dp"
                android:textSize="@dimen/text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxx"
                android:layout_margin="@dimen/margin5dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

    
</LinearLayout>
    

</androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</layout>
