<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@drawable/drawer_gradient_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconNavItem"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="@dimen/margin_10"
            android:src="@drawable/personal_info_white" />

        <TextView
            android:id="@+id/tvNavItem"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/button_select"
            android:textSize="@dimen/text_menu_size" />
    </LinearLayout>
</layout>
