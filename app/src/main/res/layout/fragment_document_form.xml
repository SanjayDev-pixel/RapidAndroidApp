<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bkg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <com.finance.app.view.utils.TextViewBold
                android:id="@+id/tvEmployment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_bkg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/kyc_document_upload"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20sp"
                android:textStyle="bold" />

             <com.finance.app.view.customViews.CustomKycDocumentUploadViewInfo
                 android:layout_width="match_parent"
                 android:id="@+id/customKycUploadDocument"
                 android:layout_height="match_parent"/>

        </LinearLayout>
