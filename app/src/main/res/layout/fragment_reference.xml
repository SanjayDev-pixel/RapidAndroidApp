<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/heading_background"
                    android:text="@string/reference_detail"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:textColorHint="@color/hint_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="textCapCharacters"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:minWidth="200dp"
                        android:textSize="@dimen/text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:gravity="start"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:orientation="horizontal">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinnerRelation"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/text_min_width"
                        app:ms_arrowColor="@color/black"
                        app:ms_arrowSize="@dimen/text_size"
                        android:textSize="@dimen/text_size"
                        app:ms_floatingLabelColor="@color/hint_color"
                        android:theme="@style/MatchSpinnerTheme"
                        app:ms_floatingLabelText="Relation  "
                        app:ms_hint="Relation "
                        app:ms_hintColor="@color/hint_color"
                        app:ms_hintTextSize="@dimen/hint_size"
                        app:ms_multiline="false" />

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinnerOccupation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/text_min_width"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_weight="1"
                        app:ms_arrowColor="@color/black"
                        android:theme="@style/MatchSpinnerTheme"
                        app:ms_arrowSize="@dimen/text_size"
                        android:textSize="@dimen/text_size"
                        app:ms_floatingLabelColor="@color/hint_color"
                        app:ms_floatingLabelText="Occupation  "
                        app:ms_hint="Occupation "
                        app:ms_hintColor="@color/hint_color"
                        app:ms_hintTextSize="@dimen/hint_size"
                        app:ms_multiline="false" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_known_since"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:textColorHint="@color/hint_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etKnownSince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:hint="@string/known_since_in_years"
                        android:minWidth="200dp"
                        android:textSize="@dimen/text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <include
                    android:id="@+id/referenceAddressLayout"
                    layout="@layout/layout_employment_address" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rcReference"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/fields_margin"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_height="wrap_content"/>

                <com.chahinem.pageindicator.PageIndicator
                    android:id="@+id/pageIndicatorAsset"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="12sp" />

                <Button
                    android:id="@+id/btnAddReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin"
                    android:text="@string/add_reference"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/button_text_size" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_marginTop="@dimen/margin_50"
                   android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous"
                    android:textColor="@color/black"
                    android:textSize="@dimen/button_text_size" />

                   <Button
                       android:id="@+id/btnNext"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/next"
                       android:layout_alignParentEnd="true"
                       android:textColor="@color/black"
                       android:textSize="@dimen/button_text_size" />
               </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</layout>
