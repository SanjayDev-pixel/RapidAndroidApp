<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/fields_margin"
        android:padding="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_otp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCross"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:tint="@color/md_red_500"
            android:layout_marginStart="@dimen/margin_50"
            android:background="@drawable/rectangular_background"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_cross"/>

    </LinearLayout>
        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/etOTP"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:cursorVisible="true"
            android:inputType="number"
            android:layoutDirection="ltr"
            android:maxLength="4"
            android:layout_marginTop="@dimen/fields_margin"
            android:textIsSelectable="false"
            android:textSize="@dimen/button_text_size"
            app:pinAnimationType="fromBottom"
            app:pinBackgroundDrawable="@drawable/bg_pin"
            app:pinBackgroundIsSquare="true"
            app:pinLineStroke="2dp"
            android:textColor="@color/black"
            app:pinLineStrokeSelected="4dp"
            app:pinTextBottomPadding="@dimen/margin_10" />

        <TextView
            android:id="@+id/tvResendOTPTimeLeftInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin_50"
            android:text=""
            android:textSize="@dimen/small_text_size"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvResendOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin_50"
            android:text="@string/resend_otp"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fields_margin"
            android:gravity="center"
            android:padding="5sp"
            android:visibility="gone"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:text="@string/verify"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

</layout>
