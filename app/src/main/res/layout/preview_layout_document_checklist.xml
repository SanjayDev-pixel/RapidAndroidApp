<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_100"
            android:orientation="vertical">

            <Button
                android:visibility="gone"
                android:id="@+id/btnSumbitlead"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_round_blue_btn_bkg"
                android:gravity="center"
                android:text="Final Submit"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_gravity="right"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/white"
                app:cardElevation="5dp"
                app:cardMaxElevation="2dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llLoanProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_loan_product"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLoanProduct"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_loan_product"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                    <LinearLayout
                        android:id="@+id/llLoanPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_loan_purpose"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLoanPurpose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Home Loan"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_loan_amount"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLoanAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Amount Request"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_tenure"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTenure"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Amount Request"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_interest_type"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvInterestType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_interest_type"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_affordable_emi"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAffordableEmi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_interest_type"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Preview_source_channel_partner"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvChannelPartner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Preview_source_channel_partner"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preview_channel_partner_name"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/button_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvChannelPartnerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Preview_source_channel_partner"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <include layout="@layout/line_separator" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>
</layout>
