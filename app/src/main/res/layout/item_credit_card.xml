<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_220sdp"
        android:layout_margin="@dimen/margin_10"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <LinearLayout
                    android:id="@+id/llDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:padding="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.finance.app.view.utils.TextViewBold
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_name_colon"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/black_242424"
                            android:textSize="14sp"
                            android:paddingLeft="@dimen/margin10dp" />

                        <com.finance.app.view.utils.TextViewNormal
                            android:id="@+id/tvBankName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textColor="@color/md_grey_500"
                            android:text="HDFC"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin10dp">

                        <com.finance.app.view.utils.TextViewBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/card_limit_colon"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/black_242424"
                            android:textSize="14sp"
                            android:paddingLeft="@dimen/margin10dp" />

                        <com.finance.app.view.utils.TextViewNormal
                            android:id="@+id/tvCardLimit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="end"
                            android:text="150000"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin10dp">

                        <com.finance.app.view.utils.TextViewBold
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/current_utilization_colon"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/black_242424"
                            android:textSize="14sp"
                            android:paddingLeft="@dimen/margin10dp" />

                        <com.finance.app.view.utils.TextViewNormal
                            android:id="@+id/tvCurrentUtilization"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="18000"

                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin10dp">

                        <com.finance.app.view.utils.TextViewBold
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/last_payment_date_colon"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/black_242424"
                            android:textSize="14sp"
                            android:paddingLeft="@dimen/margin10dp" />

                        <com.finance.app.view.utils.TextViewNormal
                            android:id="@+id/tvLastPaymentDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="24th October"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:orientation="horizontal">

                    <com.finance.app.view.utils.TextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/obligate_colon"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:paddingLeft="@dimen/margin10dp"
                        android:textColor="@color/black_242424"
                        android:textSize="14sp"
                         />

                    <com.finance.app.view.utils.TextViewNormal
                        android:id="@+id/tvObligate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="end"
                        android:text="@string/yes"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="8">

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="5sp"
                    android:layout_margin="@dimen/margin_10"
                    android:src="@drawable/ic_edit_grey" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="5sp"
                    android:layout_margin="@dimen/margin_10"
                    android:src="@drawable/ic_delete_grey" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
